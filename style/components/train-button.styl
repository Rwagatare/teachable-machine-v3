.train-button {
  position: absolute;
  top: -40px;
  left: 50%;
  transform: translateX(-50%);
  padding: 8px 20px;
  border-radius: 24px;
  background: $color__blue--primary;
  box-shadow: -2px 0 $color__blue--shadow-left, 0 2px $color__blue--shadow-bottom;
  color: $color__white;
  text-align: center;
  cursor: pointer;
  transition: all 0.2s ease-in-out;
  font-weight: 600;
  z-index: 20;
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  
  &:hover {
    background: darken($color__blue--primary, 5%);
  }
  
  &:active {
    transform: translateX(-50%) translateY(2px);
    box-shadow: -1px 0 $color__blue--shadow-left, 0 1px $color__blue--shadow-bottom;
  }
  
    
  &.training {
    background: #888;
    box-shadow: none;
    transform: translateX(-50%) translateY(1px);
    cursor: wait;
  }
}

/* Add better contrast for section titles */
.section__title {
  color: $color__text--light;
  font-weight: 600;
}

/* Improve contrast for confidence values */
.machine__percentage {
  font-weight: 600;
  color: $color__text--light;
}

/* Improve reset link contrast */
.link--reset {
  color: $color__text--light;
  font-weight: 500;
  
  &:hover {
    color: $color__blue--primary;
  }
}
