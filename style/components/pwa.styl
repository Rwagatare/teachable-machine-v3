/* PWA-specific enhancements for mobile app-like experience */

/* Hide browser UI elements when in standalone mode */
@media all and (display-mode: standalone) {
  .browser-ui-elements {
    display: none;
  }
  
  body {
    /* Prevent overscroll bounce on iOS */
    overscroll-behavior: none;
    /* Ensure full height in standalone mode */
    min-height: 100vh;
  }
  
  /* Add safe area support for devices with notches */
  .wrapper {
    padding-top: env(safe-area-inset-top);
    padding-bottom: env(safe-area-inset-bottom);
    padding-left: env(safe-area-inset-left);
    padding-right: env(safe-area-inset-right);
  }
}

/* iOS Safari specific fixes */
@supports (-webkit-touch-callout: none) {
  body {
    /* Prevent bounce scroll */
    -webkit-overflow-scrolling: touch;
    overscroll-behavior: none;
  }
  
  /* Fix for iOS Safari bottom safe area */
  .wrapper {
    padding-bottom: calc(env(safe-area-inset-bottom) + 20px);
  }
}

/* Enhanced touch targets for mobile */
.button,
.input__media__activate,
.learning__class-btn,
.output__class-btn {
  min-height: 44px; /* iOS recommended touch target */
  touch-action: manipulation; /* Prevent zoom on double-tap */
}

/* Improve visual feedback for touch interactions */
.button:active,
.learning__class-btn:active,
.output__class-btn:active {
  transform: scale(0.98);
  transition: transform 0.1s ease;
}

/* PWA Install Button Styles */
.pwa-install-button {
  -webkit-tap-highlight-color: transparent;
  touch-action: manipulation;
}

.pwa-install-button .install-icon {
  display: inline-block;
  margin-right: 6px;
}

/* Hide install button when in standalone mode */
@media all and (display-mode: standalone) {
  .pwa-install-button {
    display: none !important;
  }
}

/* Mobile-specific positioning for install button */
@media screen and (max-width: 768px) {
  .pwa-install-button {
    /* Ensure button doesn't overlap with camera or learning sections */
    bottom: 80px !important;
    right: 10px !important;
    top: auto !important;
    padding: 8px 14px !important;
    font-size: 12px !important;
    max-width: 90px !important;
  }
  
  .pwa-install-button .install-text {
    display: none; /* Hide text on mobile to save space */
  }
  
  .pwa-install-button .install-icon {
    margin-right: 0;
    font-size: 16px;
  }
  
  /* Add some padding to body to account for button */
  body {
    padding-bottom: 60px;
  }
  
  /* Ensure the install button doesn't interfere with camera area */
  .input__media {
    margin-bottom: 20px;
  }
}

/* Enhanced mobile experience */
@media screen and (max-width: 768px) {
  /* Improve spacing for mobile */
  .machine {
    padding: 10px;
  }
  
  /* Make camera view larger on mobile */
  .input__media {
    min-height: 250px;
  }
  
  /* Improve button spacing */
  .learning__classes {
    gap: 12px;
  }
  
  .learning__class {
    margin-bottom: 12px;
  }
  
  /* Better mobile typography */
  .intro__title {
    font-size: 2rem;
  }
  
  .intro__text {
    font-size: 1.1rem;
    line-height: 1.6;
  }
}

/* Landscape mobile optimizations */
@media screen and (max-width: 900px) and (orientation: landscape) {
  .intro {
    padding-top: 20px;
    padding-bottom: 20px;
  }
  
  .machine {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
  }
  
  .input {
    flex: 1;
    margin-right: 20px;
  }
  
  .learning {
    flex: 1;
  }
  
  .output {
    width: 100%;
    margin-top: 20px;
  }
}

/* High DPI screen optimizations */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  /* Ensure crisp graphics on retina displays */
  .intro__title-image,
  .footer svg,
  .machine-handdrawn {
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
  }
}

/* Dark mode support for PWA */
@media (prefers-color-scheme: dark) {
  /* This can be expanded based on your color scheme */
  .pwa-install-button {
    background: #4285f4;
    color: white;
  }
  
  .ios-install-banner {
    background: #333 !important;
    color: white !important;
  }
}

/* Accessibility improvements for PWA */
@media (prefers-reduced-motion: reduce) {
  .pwa-install-button,
  .button:active,
  .learning__class-btn:active,
  .output__class-btn:active {
    transition: none;
    transform: none;
  }
}

/* Focus styles for keyboard navigation */
.pwa-install-button:focus,
.button:focus,
.learning__class-btn:focus,
.output__class-btn:focus {
  outline: 2px solid #1b73e8;
  outline-offset: 2px;
}

/* Loading states for offline functionality */
.offline-indicator {
  position: fixed;
  top: 10px;
  right: 10px;
  background: #ff5722;
  color: white;
  padding: 8px 12px;
  border-radius: 4px;
  font-size: 12px;
  font-family: 'Poppins', sans-serif;
  z-index: 10001;
  opacity: 0;
  transform: translateY(-20px);
  transition: all 0.3s ease;
}

.offline-indicator.show {
  opacity: 1;
  transform: translateY(0);
}

/* PWA splash screen customization */
@media all and (display-mode: standalone) {
  body {
    background: #1b73e8; /* Match theme color for splash */
  }
}
