.emoji__edit {
	position: relative
	width: 100%
	height: 100%
}

.emoji__edit-bar {
	width: 100%
	height: 80px
	bottom: 0px
	position: absolute
	background: $color__white
	display: flex
	justify-content: center
}

.emoji__thumb {
	position: relative
	width: 70px
	height: 70px
	cursor: pointer
	margin: space(1) space(1) 0 space(1)
}

.emoji__thumb-emoji-wrapper {
	position: relative
	overflow: hidden
	width: 80%
	height: 80%
	background: $color__white
	top: 50%
	left: 50%
	transform: translate3d(-50%, -50%, 0)
	display: flex
	align-items: center
	justify-content: center
	font-size: 30px
	border-radius: 4px
}

.emoji__thumb-emoji-wrapper:after {
	content: " "
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	background-color: rgba($color__black, 0.6)
	background-image: url(assets/edit-icon.svg)
	background-repeat: no-repeat
	background-size: 40%
	background-position: center center
	display: none
}

.emoji__thumb-border {
	position: absolute
	width: 100%
	height: 100%
	border-width: 4px
	border-style: solid
	opacity: 1
}

.emoji__thumb:hover .emoji__thumb-emoji-wrapper:after {
	display: block
}

.emoji__thumb-border--green {
	border-color: rgba($color__class-green--primary, 0.2)
}

.emoji__thumb-border--purple {
	border-color: rgba($color__class-purple--primary, 0.2)
}

.emoji__thumb-border--orange {
	border-color: rgba($color__class-orange--primary, 0.2)
}

.emoji__thumb-border--yellow {
	border-color: rgba($color__class-yellow--primary, 0.2)
}

.emoji__thumb:hover .emoji__thumb-border--green, .emoji__thumb-border--green-selected {
	border-color: $color__class-green--primary
}

.emoji__thumb:hover .emoji__thumb-border--purple, .emoji__thumb-border--purple-selected {
	border-color: $color__class-purple--primary
}

.emoji__thumb:hover .emoji__thumb-border--orange, .emoji__thumb-border--orange-selected {
	border-color: $color__class-orange--primary
}

.emoji__thumb:hover .emoji__thumb-border--yellow, .emoji__thumb-border--yellow-selected {
	border-color: $color__class-yellow--primary
}

.emoji__edit-viewer {
	width: 100%
	position: absolute
	bottom: 80px
	top: 0px
	background-color: $color__background
	background-position: center center
	background-size: cover
	background-repeat: no-repeat
}

.emoji__canvas {
	width: 100%
	height: 100%
	
	canvas {
		width: 340px
		height: 260px
	}
}

.emoji__search {
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
}

.emoji__search-bar {
	position: absolute
	width: 100%
	height: 80px
	background-color: $color__white
}

.emoji__search-input {
	width: 100%
	height: 70px
	border: 4px solid $color__grey--primary
	padding-left: 60px
	outline: none
	
	@extend .font__size--small
}

.emoji__search-input--green {
	color: $color__class-green--primary
}

.emoji__search-input--purple {
	color: $color__class-purple--primary
}

.emoji__search-input--orange {
	color: $color__class-orange--primary
}

.emoji__search-input--yellow {
	color: $color__class-yellow--primary
}

.emoji__search-back-button {
	left: 0
	top: 0
	width: 60px
	height: 70px
	position: absolute
	background-color: transparent
	cursor: pointer
}

.emoji__search-back-button:after {
	content: " "
	position: absolute
	left: 50%
	top: 50%
	transform: translate3d(-50%, -50%, 0)
	width: 30px
	height: 30px
	background-image: url(assets/back-arrow.svg)
	background-size: 30px
	background-position: 0 0
	background-repeat: no-repeat
}

.emoji__search-back-button--green:after {
	background-position-y: 0px
}

.emoji__search-back-button--purple:after {
	background-position-y: -30px
}

.emoji__search-back-button--orange:after {
	background-position-y: -60px
}

.emoji__search-back-button--yellow:after {
	background-position-y: -90px
}

.emoji__search-scroll {
	position: absolute
	overflow: hidden
	overflow-y: scroll
	width: 100%
	top: 80px
	bottom: 0px
	background-color: rgba($color__black, 0.9)
}

.emoji__search-results {
	display: flex
	justify-content: space-around
}

.emoji__search-column {
	width: 50%
}

.emoji__search-column:first-of-type {
	padding-left: space(1)
	padding-right: space(0.5)
}

.emoji__search-column:last-of-type {
	padding-left: space(0.5)
	padding-right: space(1)
}

.emoji__search-item {
	width: 100%
	display: block
	margin-bottom: space(1)
	cursor: pointer
	background: rgba($color__white, 0.9)
	border-radius: 4px
}

.emoji__search-item:hover {
	background: $color__white
	transform: scale(1.1)
}
