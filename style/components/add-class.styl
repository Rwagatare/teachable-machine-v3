.add-class-container {
  display: flex
  justify-content: center
  margin-top: 20px
  margin-bottom: 20px
}

#add-class-button {
  display: inline-flex
  align-items: center
  justify-content: center
  border: 2px dashed #ccc
  background: none
  padding: 15px 25px
  border-radius: 8px
  cursor: pointer
  width: 80%
  max-width: 400px
  transition: all 0.3s ease
  color: #666
  
  &:hover {
    border-color: #999
    background-color: rgba(0,0,0,0.02)
  }
  
  svg {
    margin-right: 10px
  }
}

/* Hide add class button on mobile devices */
@media screen and (max-width: 768px) {
  .add-class-container {
    display: none
  }
  
  #add-class-button {
    display: none
  }
}

/* Classes for dynamically created classes */
.learning__class--red {
  .machine__value--color-red {
    background-color: $red
  }
  
  .button--record.button--color-red {
